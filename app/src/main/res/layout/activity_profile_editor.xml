<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ventoray.shaut.ui.ProfileEditorActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/scrollView_padding_top"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:clipToPadding="false"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:cardElevation="@dimen/cardview_default_elevation"

            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/edit_profile_card_height"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="@dimen/profile_picture_dim_large"
                    android:layout_height="@dimen/profile_picture_dim_large"
                    android:layout_marginEnd="@dimen/profile_picture_editor_margin_horizontal"
                    android:layout_marginStart="@dimen/profile_picture_editor_margin_horizontal"
                    android:layout_marginTop="@dimen/profile_picture_editor_margin_vertical"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="@dimen/profile_picture_cornerRadius_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView_profilePicture"
                        android:layout_width="@dimen/profile_picture_dim_large"
                        android:layout_height="@dimen/profile_picture_dim_large"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/spanky"

                        />

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textView_profileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/margin_horizontal_sign_in"
                    android:layout_marginStart="@dimen/margin_horizontal_sign_in"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/buttonBarLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" />


                <android.support.v7.widget.ButtonBarLayout
                    android:id="@+id/buttonBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageButton
                        android:id="@+id/button_editProfile"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/ic_create_white_24px"
                        android:tint="@color/colorAccent" />

                    <ImageButton
                        android:id="@+id/button_camera"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/ic_camera_alt_white_24px"
                        android:tint="@color/colorAccent" />


                </android.support.v7.widget.ButtonBarLayout>

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


    </ScrollView>


</android.support.constraint.ConstraintLayout>
